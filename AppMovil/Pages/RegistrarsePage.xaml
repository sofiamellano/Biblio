<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:AppMovil.ViewModels"
             x:Class="AppMovil.Pages.RegistrarsePage"
             Title="Crear Cuenta"
             Shell.NavBarIsVisible="False">
    
    <ContentPage.BindingContext>
        <viewmodels:RegistrarseViewModel />
    </ContentPage.BindingContext>
    
    <ScrollView>
        <Grid RowDefinitions="Auto, *, Auto">

            <!-- Header con gradiente -->
            <Frame Grid.Row="0" 
                   BackgroundColor="#4ECDC4"
                   Padding="20,50,20,20"
                   CornerRadius="0"
                   HasShadow="False">
                <StackLayout>
                    <!-- Botón volver -->
                    <Button Text="←"
         Command="{Binding VolverCommand}"
         BackgroundColor="Transparent"
         TextColor="White"
         FontSize="24"
         HorizontalOptions="Start"
         WidthRequest="50"
         HeightRequest="50"
         Margin="0,0,0,20"/>
                    <!-- Título -->
                    <Label Text="Crear Nueva Cuenta" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           Margin="0,0,0,30"/>

                    <!-- Ilustración central -->
                    <Frame BackgroundColor="White"
                           CornerRadius="80"
                           WidthRequest="160"
                           HeightRequest="160"
                           HorizontalOptions="Center"
                           Padding="0"
                           HasShadow="True">
                        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                            <Label Text="👤" 
                                   FontSize="40"
                                   HorizontalOptions="Center"
                                   Margin="0,10,0,0"/>
                            <Label Text="📝" 
                                   FontSize="35"
                                   HorizontalOptions="Center"
                                   Margin="0,5,0,10"/>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </Frame>

            <!-- Contenido principal -->
            <StackLayout Grid.Row="1" 
                         Padding="30,40,30,20"
                         Spacing="25"
                         BackgroundColor="White">

                <!-- Texto instructivo -->
                <Label Text="Complete los siguientes datos para crear su cuenta en Biblioteca ISP 20" 
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="#3498DB"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       LineBreakMode="WordWrap"
                       Margin="0,0,0,20"/>

                <!-- Formulario -->
                <StackLayout Spacing="25">
                    
                    <!-- Campo Nombre -->
                    <StackLayout Spacing="10">
                        <Label Text="Apellido y Nombre"
                               TextColor="#2C3E50"
                               FontSize="14"
                               FontAttributes="Bold"/>
                        <Entry Text="{Binding Nombre}"
                               Placeholder="Ingrese su nombre completo"
                               PlaceholderColor="#BDC3C7"
                               TextColor="#2C3E50"
                               FontSize="16"
                               BackgroundColor="Transparent"/>
                        <BoxView HeightRequest="1"
                                 BackgroundColor="#BDC3C7"
                                 HorizontalOptions="FillAndExpand"/>
                    </StackLayout>

                    <!-- Campo Email -->
                    <StackLayout Spacing="10">
                        <Label Text="Correo Electrónico"
                               TextColor="#2C3E50"
                               FontSize="14"
                               FontAttributes="Bold"/>
                        <Entry Text="{Binding Mail}"
                               Placeholder="ejemplo@correo.com"
                               PlaceholderColor="#BDC3C7"
                               TextColor="#2C3E50"
                               FontSize="16"
                               Keyboard="Email"
                               BackgroundColor="Transparent"/>
                        <BoxView HeightRequest="1"
                                 BackgroundColor="#BDC3C7"
                                 HorizontalOptions="FillAndExpand"/>
                    </StackLayout>

                    <!-- Campo Contraseña -->
                    <StackLayout Spacing="10">
                        <Label Text="Contraseña"
                               TextColor="#2C3E50"
                               FontSize="14"
                               FontAttributes="Bold"/>
                        <Entry Text="{Binding Password}"
                               Placeholder="Mínimo 6 caracteres"
                               PlaceholderColor="#BDC3C7"
                               TextColor="#2C3E50"
                               FontSize="16"
                               IsPassword="True"
                               BackgroundColor="Transparent"/>
                        <BoxView HeightRequest="1"
                                 BackgroundColor="#BDC3C7"
                                 HorizontalOptions="FillAndExpand"/>
                    </StackLayout>

                    <!-- Campo Verificar Contraseña -->
                    <StackLayout Spacing="10">
                        <Label Text="Verificar Contraseña"
                               TextColor="#2C3E50"
                               FontSize="14"
                               FontAttributes="Bold"/>
                        <Entry Text="{Binding VerifyPassword}"
                               Placeholder="Repita su contraseña"
                               PlaceholderColor="#BDC3C7"
                               TextColor="#2C3E50"
                               FontSize="16"
                               IsPassword="True"
                               BackgroundColor="Transparent"/>
                        <BoxView HeightRequest="1"
                                 BackgroundColor="#BDC3C7"
                                 HorizontalOptions="FillAndExpand"/>
                    </StackLayout>
                </StackLayout>

                <!-- Mensajes de estado -->
                <StackLayout Spacing="15">
                    <!-- Mensaje de error -->
                    <Label Text="{Binding ErrorMessage}" 
                           TextColor="#E74C3C"
                           FontSize="14"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           LineBreakMode="WordWrap">
                        <Label.Triggers>
                            <DataTrigger TargetType="Label" Binding="{Binding ErrorMessage}" Value="">
                                <Setter Property="IsVisible" Value="False" />
                            </DataTrigger>
                            <DataTrigger TargetType="Label" Binding="{Binding ErrorMessage}" Value="{x:Null}">
                                <Setter Property="IsVisible" Value="False" />
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>

                    <!-- Mensaje de éxito -->
                    <Label Text="{Binding SuccessMessage}" 
                           TextColor="#27AE60"
                           FontSize="14"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           LineBreakMode="WordWrap">
                        <Label.Triggers>
                            <DataTrigger TargetType="Label" Binding="{Binding SuccessMessage}" Value="">
                                <Setter Property="IsVisible" Value="False" />
                            </DataTrigger>
                            <DataTrigger TargetType="Label" Binding="{Binding SuccessMessage}" Value="{x:Null}">
                                <Setter Property="IsVisible" Value="False" />
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>

                    <!-- Indicador de carga -->
                    <StackLayout IsVisible="{Binding IsBusy}" 
                                Orientation="Horizontal" 
                                HorizontalOptions="Center"
                                Spacing="10">
                        <ActivityIndicator IsRunning="{Binding IsBusy}"
                                          Color="#4ECDC4"/>
                        <Label Text="Creando cuenta..." 
                               TextColor="#4ECDC4"
                               VerticalOptions="Center"
                               FontSize="14"/>
                    </StackLayout>
                </StackLayout>

            </StackLayout>

            <!-- Botón registrarse -->
            <Button Grid.Row="2"
                    Text="Crear Cuenta"
                    Command="{Binding RegistrarseCommand}"
                    BackgroundColor="#4ECDC4"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    HeightRequest="60"
                    CornerRadius="0"
                    Margin="40,20,40,40"/>

        </Grid>
    </ScrollView>
</ContentPage>