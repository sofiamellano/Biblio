<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="AppMovil.Pages.RecuperarPasswordPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AppMovil.ViewModels"
             Title="Recuperar Contraseña"
             Shell.NavBarIsVisible="False">
    
    <ContentPage.BindingContext>
        <viewModels:RecuperarPasswordViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, *, Auto">
        
        <!-- Header con gradiente -->
        <Frame Grid.Row="0" 
               BackgroundColor="#4ECDC4"
               Padding="20,50,20,20"
               CornerRadius="0"
               HasShadow="False">
            <StackLayout>
                <!-- Botón volver -->
                <Button Text="←"
                        Command="{Binding VolverCommand}"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontSize="24"
                        HorizontalOptions="Start"
                        WidthRequest="50"
                        HeightRequest="50"
                        Margin="0,0,0,20"/>
                
                <!-- Título -->
                <Label Text="Olvidé mi contraseña" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Margin="0,0,0,30"/>
                
                <!-- Ilustración central -->
                <Frame BackgroundColor="White"
                       CornerRadius="80"
                       WidthRequest="160"
                       HeightRequest="160"
                       HorizontalOptions="Center"
                       Padding="20"
                       HasShadow="True">
                    <Label Text="🔐📧"
                           FontSize="60"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Frame>
            </StackLayout>
        </Frame>
        
        <!-- Contenido principal -->
        <StackLayout Grid.Row="1" 
                     Padding="30,40,30,20"
                     Spacing="30"
                     BackgroundColor="White">
            
            <!-- Texto instructivo -->
            <StackLayout Spacing="15">
                <Label Text="Ingresá tu correo electrónico" 
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="#3498DB"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>
                
                <Label Text="y te enviaremos las instrucciones para que puedas restablecer tu contraseña" 
                       FontSize="16"
                       TextColor="#7F8C8D"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       LineBreakMode="WordWrap"/>
            </StackLayout>
            
            <!-- Campo de email -->
            <StackLayout Spacing="20">
                <Entry Text="{Binding Mail}"
                       Placeholder="DNI o Correo electrónico"
                       PlaceholderColor="#BDC3C7"
                       TextColor="#2C3E50"
                       FontSize="16"
                       Keyboard="Email"
                       BackgroundColor="Transparent"
                       Margin="0,60,0,0"/>
                
                <!-- Línea debajo del Entry -->
                <BoxView HeightRequest="1"
                         BackgroundColor="#BDC3C7"
                         HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            
            <!-- Mensajes -->
            <StackLayout Spacing="10">
                <!-- Mensaje de error -->
                <Frame IsVisible="{Binding ErrorMessage}"
                       BackgroundColor="#E74C3C"
                       Padding="15"
                       CornerRadius="8"
                       HasShadow="False">
                    <Label Text="{Binding ErrorMessage}" 
                           TextColor="White"
                           FontSize="14"
                           HorizontalOptions="Center"/>
                </Frame>
                
                <!-- Mensaje de éxito -->
                <Frame IsVisible="{Binding SuccessMessage}"
                       BackgroundColor="#27AE60"
                       Padding="15"
                       CornerRadius="8"
                       HasShadow="False">
                    <Label Text="{Binding SuccessMessage}" 
                           TextColor="White"
                           FontSize="14"
                           HorizontalOptions="Center"/>
                </Frame>
                
                <!-- Indicador de carga -->
                <StackLayout IsVisible="{Binding IsBusy}" 
                            Orientation="Horizontal" 
                            HorizontalOptions="Center"
                            Spacing="10">
                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                      Color="#4ECDC4"/>
                    <Label Text="Enviando instrucciones..." 
                           TextColor="#4ECDC4"
                           VerticalOptions="Center"
                           FontSize="14"/>
                </StackLayout>
            </StackLayout>
            
        </StackLayout>
        
        <!-- Botón enviar -->
        <Button Grid.Row="2"
                Text="Enviar"
                Command="{Binding EnviarCommand}"
                BackgroundColor="#4ECDC4"
                TextColor="White"
                FontSize="18"
                FontAttributes="Bold"
                HeightRequest="60"
                CornerRadius="0"
                Margin="40,20,40,40"/>
        
    </Grid>
</ContentPage>