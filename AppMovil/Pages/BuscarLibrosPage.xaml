<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AppMovil.ViewModels"
             x:Class="AppMovil.BuscarLibrosPage"
             Title="Buscar Libros">
    <ContentPage.BindingContext>
        <viewModels:BuscarLibrosViewModel />
    </ContentPage.BindingContext>
    <StackLayout Padding="20">
        <Label Text="Buscar Libros" FontSize="24" HorizontalOptions="Center"/>
        
        <!-- SearchBar con SearchCommand conectado -->
        <SearchBar Placeholder="Buscar por titulo o autor" 
                   Text="{Binding SearchText}"
                   SearchCommand="{Binding BuscarCommand}"
                   IsEnabled="True"/>

        <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}"/>
        
        <CollectionView ItemsSource="{Binding Libros}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Label Text="{Binding Titulo}" FontSize="16"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>