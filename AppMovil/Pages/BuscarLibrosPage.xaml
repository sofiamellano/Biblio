<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AppMovil.ViewModels"
             x:Class="AppMovil.Pages.BuscarLibrosPage"
             Title="Buscar Libros">
    <ContentPage.BindingContext>
        <viewModels:BuscarLibrosViewModel />
    </ContentPage.BindingContext>

    <ScrollView Padding="20">
        <StackLayout Spacing="20">

            <!-- Encabezado -->
            <Frame BackgroundColor="DodgerBlue" 
                   Padding="20" 
                   CornerRadius="15" 
                   HasShadow="True">
                <StackLayout>
                    <Label Text="🔍 Buscar Libros" 
                           FontSize="26" 
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                    <Label Text="Encuentra libros en nuestro catálogo" 
                           FontSize="14"
                           TextColor="LightBlue"
                           HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>

            <!-- Sección de búsqueda -->
            <Frame BackgroundColor="White" 
                   Padding="15" 
                   CornerRadius="12" 
                   HasShadow="True"
                   BorderColor="LightGray">
                <StackLayout Spacing="15">
                    <Label Text="¿Qué libro estás buscando?" 
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="DarkSlateGray"/>

                    <!-- SearchBar mejorado -->
                    <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">
                        <Frame Grid.Column="0"
                               BackgroundColor="WhiteSmoke" 
                               Padding="5" 
                               CornerRadius="10"
                               HasShadow="False"
                               BorderColor="LightBlue">
                            <SearchBar Placeholder="Buscar por título, autor, editorial..." 
                                       Text="{Binding SearchText}"
                                       SearchCommand="{Binding BuscarCommand}"
                                       BackgroundColor="Transparent"
                                       PlaceholderColor="Gray"
                                       TextColor="Black"
                                       FontSize="16"/>
                        </Frame>

                        <!-- Botón Buscar -->
                        <Button Grid.Column="1"
                                Text="🔍&#x0a;Buscar"
                                Command="{Binding BuscarCommand}"
                                BackgroundColor="Green"
                                TextColor="White"
                                CornerRadius="10"
                                FontSize="12"
                                WidthRequest="70"
                                HeightRequest="50"
                                FontAttributes="Bold"/>
                    </Grid>

                    <!-- Botón para mostrar/ocultar filtros -->
                    <Button Text="⚙️ Filtros de búsqueda" 
                            Command="{Binding ToggleFiltrosCommand}"
                            BackgroundColor="LightSteelBlue"
                            TextColor="DarkBlue"
                            CornerRadius="8"
                            FontSize="14"/>

                    <!-- Panel de filtros -->
                    <Frame IsVisible="{Binding MostrarFiltros}"
                           BackgroundColor="AliceBlue" 
                           Padding="15" 
                           CornerRadius="10"
                           HasShadow="False"
                           BorderColor="LightBlue">
                        <StackLayout Spacing="10">
                            <Label Text="🔎 Buscar en:" 
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="DarkBlue"/>

                            <!-- Checkboxes de filtros -->
                            <Grid ColumnDefinitions="*, *" RowDefinitions="Auto, Auto">

                                <StackLayout Grid.Column="0" Grid.Row="0" Orientation="Horizontal" Spacing="8">
                                    <CheckBox IsChecked="{Binding FiltrarPorTitulo}" Color="DodgerBlue"/>
                                    <Label Text="📖 Título" 
                                           VerticalOptions="Center"
                                           TextColor="DarkSlateGray"/>
                                </StackLayout>

                                <StackLayout Grid.Column="1" Grid.Row="0" Orientation="Horizontal" Spacing="8">
                                    <CheckBox IsChecked="{Binding FiltrarPorAutor}" Color="DodgerBlue"/>
                                    <Label Text="✍️ Autor" 
                                           VerticalOptions="Center"
                                           TextColor="DarkSlateGray"/>
                                </StackLayout>

                                <StackLayout Grid.Column="0" Grid.Row="1" Orientation="Horizontal" Spacing="8">
                                    <CheckBox IsChecked="{Binding FiltrarPorEditorial}" Color="DodgerBlue"/>
                                    <Label Text="🏢 Editorial" 
                                           VerticalOptions="Center"
                                           TextColor="DarkSlateGray"/>
                                </StackLayout>

                                <StackLayout Grid.Column="1" Grid.Row="1" Orientation="Horizontal" Spacing="8">
                                    <CheckBox IsChecked="{Binding FiltrarPorGenero}" Color="DodgerBlue"/>
                                    <Label Text="🎭 Género" 
                                           VerticalOptions="Center"
                                           TextColor="DarkSlateGray"/>
                                </StackLayout>
                            </Grid>

                            <Button Text="🗑️ Limpiar búsqueda" 
                                    Command="{Binding LimpiarCommand}"
                                    BackgroundColor="Orange"
                                    TextColor="White"
                                    CornerRadius="8"
                                    FontSize="14"/>
                        </StackLayout>
                    </Frame>

                    <!-- Indicador de carga -->
                    <StackLayout IsVisible="{Binding IsBusy}" 
                                Orientation="Horizontal" 
                                HorizontalOptions="Center"
                                Spacing="10">
                        <ActivityIndicator IsRunning="{Binding IsBusy}"
                                          Color="DodgerBlue"/>
                        <Label Text="Buscando libros..." 
                               TextColor="DodgerBlue"
                               VerticalOptions="Center"
                               FontSize="14"/>
                    </StackLayout>
                </StackLayout>
            </Frame>

            <!-- Sección de resultados -->
            <StackLayout Spacing="15">
                <!-- Encabezado de resultados -->
                <Frame BackgroundColor="LightGreen" 
                       Padding="12" 
                       CornerRadius="10" 
                       HasShadow="True"
                       BorderColor="Green">
                    <StackLayout>
                        <Label Text="📚 Resultados de búsqueda" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="DarkGreen"
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding Libros.Count, StringFormat='{0} libros encontrados'}"
                               FontSize="14"
                               TextColor="DarkGreen"
                               HorizontalOptions="Center"/>
                    </StackLayout>
                </Frame>

                <!-- Lista de libros en cards horizontales -->
                <CollectionView ItemsSource="{Binding Libros}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="White" 
                                   Padding="20" 
                                   Margin="0,8"
                                   CornerRadius="15"
                                   HasShadow="True"
                                   BorderColor="LightSteelBlue">
                                <Grid ColumnDefinitions="Auto, *, Auto" 
                                      RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto">

                                    <!-- Ícono principal -->
                                    <Label Grid.Column="0" Grid.Row="0" Grid.RowSpan="4"
                                           Text="📚" 
                                           FontSize="50"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center"
                                           Margin="0,0,20,0"/>

                                    <!-- Título del libro -->
                                    <Label Grid.Column="1" Grid.Row="0"
                                           Text="{Binding Titulo}" 
                                           FontSize="20"
                                           FontAttributes="Bold"
                                           TextColor="DarkSlateGray"
                                           LineBreakMode="WordWrap"/>

                                    <!-- Autor -->
                                    <StackLayout Grid.Column="1" Grid.Row="1" 
            Orientation="Horizontal" 
            Spacing="8"
            Margin="0,8,0,0">
                                        <Label Text="✍️" FontSize="16"/>
                                        <Label Text="{Binding Autores}" 
           FontSize="16"
           TextColor="Gray"
           LineBreakMode="TailTruncation"/>
                                    </StackLayout>

                                    <!-- Genero -->
                                    <StackLayout Grid.Column="1" Grid.Row="2" 
            Orientation="Horizontal" 
            Spacing="8"
            Margin="0,8,0,0">
                                        <Label Text="🏷️" FontSize="16"/>
                                        <Label Text="{Binding Generos}" 
           FontSize="16"
           TextColor="Gray"
           LineBreakMode="TailTruncation"/>
                                    </StackLayout>

                                    <!-- Editorial -->
                                    <StackLayout Grid.Column="1" Grid.Row="3" 
                                                Orientation="Horizontal" 
                                                Spacing="8"
                                                Margin="0,8,0,0">
                                        <Label Text="🏢" FontSize="16"/>
                                        <Label Text="{Binding Editorial.Nombre, StringFormat='Editorial: {0}'}" 
                                               FontSize="16"
                                               TextColor="Gray"
                                               LineBreakMode="TailTruncation"/>
                                    </StackLayout>

                                    <!-- Año de publicación -->
                                    <StackLayout Grid.Column="1" Grid.Row="4" 
                                                Orientation="Horizontal" 
                                                Spacing="8"
                                                Margin="0,5,0,0">
                                        <Label Text="📅" FontSize="16"/>
                                        <Label Text="{Binding AnioPublicacion, StringFormat='Año: {0}'}" 
                                               FontSize="16"
                                               TextColor="Gray"/>
                                    </StackLayout>

                                    <!-- Páginas -->
                                    <StackLayout Grid.Column="1" Grid.Row="5" 
                                                Orientation="Horizontal" 
                                                Spacing="8"
                                                Margin="0,5,0,0">
                                        <Label Text="📄" FontSize="16"/>
                                        <Label Text="{Binding Paginas, StringFormat='Páginas: {0}'}" 
                                               FontSize="16"
                                               TextColor="Gray"/>
                                    </StackLayout>

                                    <!-- Descripción -->
                                    <Label Grid.Column="1" Grid.Row="6"
                                           Text="{Binding Descripcion}" 
                                           FontSize="15"
                                           TextColor="DarkGray"
                                           LineBreakMode="WordWrap"
                                           MaxLines="3"
                                           Margin="0,10,0,0"/>

                                    <!-- Botón de acción -->
                                    <Button Grid.Column="2" Grid.Row="0" Grid.RowSpan="7"
                                            Text="📖&#x0a;Ver&#x0a;Detalles"
                                            BackgroundColor="LightBlue"
                                            TextColor="DarkBlue"
                                            CornerRadius="12"
                                            FontSize="14"
                                            WidthRequest="80"
                                            HeightRequest="80"
                                            VerticalOptions="Center"/>

                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Mensaje cuando no hay resultados -->
                <!--
                <Frame BackgroundColor="LightYellow"
                       Padding="25"
                       CornerRadius="12"
                       HasShadow="True"
                       BorderColor="Orange">
                    <StackLayout>
                        <Label Text="🤔 Sin resultados" 
                               FontSize="20"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="DarkOrange"/>
                        <Label Text="Intenta con otros términos de búsqueda o ajusta los filtros"
                               FontSize="14"
                               HorizontalOptions="Center"
                               TextColor="Gray"
                               HorizontalTextAlignment="Center"
                               Margin="0,8,0,0"/>
                        <Label Text="💡 Tip: Usa palabras clave simples y verifica que los filtros apropiados estén seleccionados"
                               FontSize="12"
                               HorizontalOptions="Center"
                               TextColor="Gray"
                               HorizontalTextAlignment="Center"
                               FontFamily="Italic"
                               Margin="0,5,0,0"/>
                    </StackLayout>
                </Frame>-->

            </StackLayout>

        </StackLayout>
    </ScrollView>
</ContentPage>