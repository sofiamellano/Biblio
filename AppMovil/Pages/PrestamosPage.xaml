<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AppMovil.ViewModels"
             x:Class="AppMovil.PrestamosPage"
             Title="Prestamos">
    <ContentPage.BindingContext>
        <viewModels:PrestamosViewModel />
    </ContentPage.BindingContext>
    <StackLayout Padding="20">
        <Label Text="Prestamos Vigentes" FontSize="24" HorizontalOptions="Center"/>

        <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}"/>

        <CollectionView ItemsSource="{Binding Prestamos}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Label Text="{Binding .}" FontSize="16"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>