<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AppMovil.ViewModels"
             x:Class="AppMovil.PrestamosPage"
             Title="Prestamos">
    <ContentPage.BindingContext>
        <viewModels:PrestamosViewModel />
    </ContentPage.BindingContext>
    
    <ScrollView Padding="20">
        <StackLayout Spacing="25">
            
            <!-- Indicador de carga -->
            <ActivityIndicator IsVisible="{Binding IsBusy}" 
                              IsRunning="{Binding IsBusy}"
                              Color="DodgerBlue"
                              VerticalOptions="Center"/>
            
            <!-- Sección Préstamos Vigentes -->
            <StackLayout Spacing="15">
                <!-- Encabezado Préstamos Vigentes -->
                <Frame BackgroundColor="LightGreen" 
                       Padding="15" 
                       CornerRadius="10" 
                       HasShadow="True"
                       BorderColor="Green">
                    <Label Text="📚 Préstamos Vigentes" 
                           FontSize="22" 
                           FontAttributes="Bold"
                           TextColor="DarkGreen"
                           HorizontalOptions="Center"/>
                </Frame>

                <!-- Lista de Préstamos Vigentes -->
                <CollectionView ItemsSource="{Binding PrestamosVigentes}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="White" 
                                   Padding="15" 
                                   Margin="0,5"
                                   CornerRadius="8"
                                   HasShadow="True"
                                   BorderColor="LightGreen">
                                <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto, Auto">
                                    
                                    <!-- Título del libro -->
                                    <Label Grid.Column="0" Grid.Row="0"
                                           Text="{Binding Ejemplar.Libro.Titulo}" 
                                           FontSize="16" 
                                           FontAttributes="Bold"
                                           TextColor="Black"
                                           LineBreakMode="WordWrap"/>
                                    
                                    <!-- Estado -->
                                    <Label Grid.Column="1" Grid.Row="0"
                                           Text="🔄 Activo" 
                                           FontSize="12"
                                           TextColor="Orange"
                                           FontAttributes="Bold"
                                           VerticalOptions="Start"/>
                                    
                                    <!-- Fecha de préstamo -->
                                    <Label Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
                                           Text="{Binding FechaPrestamo, StringFormat='Prestado el: {0:dd/MM/yyyy}'}" 
                                           FontSize="14"
                                           TextColor="Gray"
                                           Margin="0,5,0,0"/>
                                    
                                    <!-- Línea separadora -->
                                    <BoxView Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"
                                             HeightRequest="1" 
                                             BackgroundColor="LightGray"
                                             Margin="0,8,0,0"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Mensaje cuando no hay préstamos vigentes --><!--
                <Frame BackgroundColor="LightYellow"
                       Padding="20"
                       CornerRadius="10"
                       HasShadow="True"
                       BorderColor="Orange">
                    <StackLayout>
                        <Label Text="ℹ️ No tienes préstamos vigentes" 
                               FontSize="16"
                               HorizontalOptions="Center"
                               TextColor="DarkOrange"
                               FontAttributes="Bold"/>
                        <Label Text="Todos tus libros han sido devueltos"
                               FontSize="14"
                               HorizontalOptions="Center"
                               TextColor="Gray"/>
                    </StackLayout>
                </Frame>-->
            </StackLayout>

            <!-- Separador visual -->
            <BoxView HeightRequest="2" 
                     BackgroundColor="LightGray" 
                     HorizontalOptions="FillAndExpand"
                     CornerRadius="1"/>

            <!-- Sección Préstamos Históricos -->
            <StackLayout Spacing="15">
                <!-- Encabezado Préstamos Históricos -->
                <Frame BackgroundColor="LightBlue" 
                       Padding="15" 
                       CornerRadius="10" 
                       HasShadow="True"
                       BorderColor="Blue">
                    <Label Text="📋 Préstamos Históricos" 
                           FontSize="22" 
                           FontAttributes="Bold"
                           TextColor="DarkBlue"
                           HorizontalOptions="Center"/>
                </Frame>

                <!-- Lista de Préstamos Históricos -->
                <CollectionView ItemsSource="{Binding PrestamosHistoricos}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="White" 
                                   Padding="15" 
                                   Margin="0,5"
                                   CornerRadius="8"
                                   HasShadow="True"
                                   BorderColor="LightBlue">
                                <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto, Auto, Auto">
                                    
                                    <!-- Título del libro -->
                                    <Label Grid.Column="0" Grid.Row="0"
                                           Text="{Binding Ejemplar.Libro.Titulo}" 
                                           FontSize="16" 
                                           FontAttributes="Bold"
                                           TextColor="Black"
                                           LineBreakMode="WordWrap"/>
                                    
                                    <!-- Estado -->
                                    <Label Grid.Column="1" Grid.Row="0"
                                           Text="✅ Devuelto" 
                                           FontSize="12"
                                           TextColor="Green"
                                           FontAttributes="Bold"
                                           VerticalOptions="Start"/>
                                    
                                    <!-- Fecha de préstamo -->
                                    <Label Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
                                           Text="{Binding FechaPrestamo, StringFormat='Prestado el: {0:dd/MM/yyyy}'}" 
                                           FontSize="14"
                                           TextColor="Gray"
                                           Margin="0,5,0,0"/>
                                    
                                    <!-- Fecha de devolución -->
                                    <Label Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"
                                           Text="{Binding FechaDevolucion, StringFormat='Devuelto el: {0:dd/MM/yyyy}'}" 
                                           FontSize="14"
                                           TextColor="Green"
                                           FontAttributes="Bold"/>
                                    
                                    <!-- Línea separadora -->
                                    <BoxView Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2"
                                             HeightRequest="1" 
                                             BackgroundColor="LightGray"
                                             Margin="0,8,0,0"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Mensaje cuando no hay préstamos históricos --><!--
                <Frame BackgroundColor="LightGray"
                       Padding="20"
                       CornerRadius="10"
                       HasShadow="True"
                       BorderColor="Gray">
                    <StackLayout>
                        <Label Text="📝 No tienes préstamos históricos" 
                               FontSize="16"
                               HorizontalOptions="Center"
                               TextColor="Gray"
                               FontAttributes="Bold"/>
                        <Label Text="Aquí aparecerán los libros que hayas devuelto"
                               FontSize="14"
                               HorizontalOptions="Center"
                               TextColor="Gray"/>
                    </StackLayout>
                </Frame>-->
            </StackLayout>

        </StackLayout>
    </ScrollView>
</ContentPage>