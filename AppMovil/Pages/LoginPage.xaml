<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AppMovil.ViewModels"
             x:Class="AppMovil.Pages.LoginPage"
             Title="Login">
    <ContentPage.BindingContext>
        <viewModels:LoginViewModel />
    </ContentPage.BindingContext>
    <StackLayout Padding="30">
        <Label Text="Iniciar sesion" FontSize="24" HorizontalOptions="Center"/>
        <Entry Placeholder="Usuario" Text="{Binding Username}"/>
        <Entry Placeholder="Contrasena" IsPassword="True" Text="{Binding Password}"/>
        <Button Text="Ingresar" Command="{Binding LoginCommand}"/>
        
        <!--Ingreso el texto enlace "Olvide mi contrasena"-->
        <Label Text="Olvide mi contrasena" TextColor="Blue" FontSize="Body" HorizontalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ForgotPasswordCommand}" />
            </Label.GestureRecognizers>
        </Label>
        
        <ActivityIndicator IsRunning="{Binding IsBusy}"/>
    </StackLayout>
</ContentPage>