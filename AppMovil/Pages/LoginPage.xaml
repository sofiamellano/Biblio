<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AppMovil.ViewModels"
             x:Class="AppMovil.Pages.LoginPage"
             Title="Iniciar Sesión"
             Shell.NavBarIsVisible="False">
    
    <ContentPage.BindingContext>
        <viewModels:LoginViewModel />
    </ContentPage.BindingContext>
    
    <ScrollView>
        <Grid RowDefinitions="Auto, *, Auto">

            <!-- Header con gradiente -->
            <Frame Grid.Row="0" 
                   BackgroundColor="#4ECDC4"
                   Padding="20,50,20,20"
                   CornerRadius="0"
                   HasShadow="False">
                <StackLayout>
                    <!-- Título -->
                    <Label Text="Iniciar Sesión" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           Margin="0,0,0,30"/>

                    <!-- Ilustración central -->
                    <Frame BackgroundColor="White"
                           CornerRadius="80"
                           WidthRequest="160"
                           HeightRequest="160"
                           HorizontalOptions="Center"
                           Padding="0"
                           HasShadow="True">
                        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                            <Label Text="📚" 
                                   FontSize="40"
                                   HorizontalOptions="Center"
                                   Margin="0,10,0,0"/>
                            <Label Text="🔑" 
                                   FontSize="35"
                                   HorizontalOptions="Center"
                                   Margin="0,5,0,10"/>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </Frame>

            <!-- Contenido principal -->
            <StackLayout Grid.Row="1" 
                         Padding="30,40,30,20"
                         Spacing="25"
                         BackgroundColor="White">

                <!-- Texto de bienvenida -->
                <Label Text="Bienvenido a Biblioteca ISP 20" 
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="#3498DB"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       Margin="0,0,0,20"/>

                <!-- Formulario de login -->
                <StackLayout Spacing="25">
                    
                    <!-- Campo Usuario -->
                    <StackLayout Spacing="10">
                        <Label Text="Usuario"
                               TextColor="#2C3E50"
                               FontSize="14"
                               FontAttributes="Bold"/>
                        <Entry Text="{Binding Username}"
                               Placeholder="Ingrese su usuario"
                               PlaceholderColor="#BDC3C7"
                               TextColor="#2C3E50"
                               FontSize="16"
                               BackgroundColor="Transparent"/>
                        <BoxView HeightRequest="1"
                                 BackgroundColor="#BDC3C7"
                                 HorizontalOptions="FillAndExpand"/>
                    </StackLayout>

                    <!-- Campo Contraseña -->
                    <StackLayout Spacing="10">
                        <Label Text="Contraseña"
                               TextColor="#2C3E50"
                               FontSize="14"
                               FontAttributes="Bold"/>
                        <Entry Text="{Binding Password}"
                               Placeholder="Ingrese su contraseña"
                               PlaceholderColor="#BDC3C7"
                               TextColor="#2C3E50"
                               FontSize="16"
                               IsPassword="True"
                               BackgroundColor="Transparent"/>
                        <BoxView HeightRequest="1"
                                 BackgroundColor="#BDC3C7"
                                 HorizontalOptions="FillAndExpand"/>
                    </StackLayout>
                </StackLayout>

                <!-- Indicador de carga -->
                <StackLayout IsVisible="{Binding IsBusy}" 
                            Orientation="Horizontal" 
                            HorizontalOptions="Center"
                            Spacing="10"
                            Margin="0,20,0,0">
                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                      Color="#4ECDC4"/>
                    <Label Text="Iniciando sesión..." 
                           TextColor="#4ECDC4"
                           VerticalOptions="Center"
                           FontSize="14"/>
                </StackLayout>

                <!-- Botones de acciones adicionales -->
                <StackLayout Spacing="15" Margin="0,30,0,0">
                    
                    <!-- Botón Olvidé mi contraseña -->
                    <Button Text="¿Olvidé mi contraseña?" 
                            Command="{Binding ForgotPasswordCommand}"
                            BackgroundColor="Transparent"
                            TextColor="#3498DB"
                            BorderWidth="1"
                            BorderColor="#3498DB"
                            FontSize="14"
                            HeightRequest="45"
                            CornerRadius="22"/>
                    
                    <!-- Botón Registrarse -->
                    <Button Text="Crear nueva cuenta" 
                            Command="{Binding RegisterCommand}"
                            BackgroundColor="Transparent"
                            TextColor="#27AE60"
                            BorderWidth="1"
                            BorderColor="#27AE60"
                            FontSize="14"
                            HeightRequest="45"
                            CornerRadius="22"/>
                </StackLayout>

            </StackLayout>

            <!-- Botón Ingresar -->
            <Button Grid.Row="2"
                    Text="Ingresar"
                    Command="{Binding LoginCommand}"
                    BackgroundColor="#4ECDC4"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    HeightRequest="60"
                    CornerRadius="0"
                    Margin="40,20,40,40"/>

        </Grid>
    </ScrollView>
</ContentPage>