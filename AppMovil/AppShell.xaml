<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppMovil.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppMovil"
    xmlns:viewModels="clr-namespace:AppMovil.ViewModels"
    xmlns:pages="clr-namespace:AppMovil.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Biblioteca Digital">

    <Shell.BindingContext>
        <viewModels:AppShellViewModel x:Name="AppShellVM"/>
    </Shell.BindingContext>

    <!-- Header del Flyout personalizado -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="#2196F3" HeightRequest="120">
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="游닄" FontSize="40" HorizontalOptions="Center" TextColor="White"/>
                <Label Text="Biblioteca Digital" FontSize="18" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center"/>
            </StackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <!-- Pantalla de Login -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage"
        IsVisible="{Binding LoginVisible}"
        FlyoutItemIsVisible="False" />

    <!-- Pantalla de cambiar contrase침a -->
    <ShellContent
     Title="Cambiar Contrase침a"
     ContentTemplate="{DataTemplate pages:RecuperarPasswordPage}"
     Route="ResetPassword"
     IsVisible="{Binding ResetPasswordVisible}"
     FlyoutItemIsVisible="False" />

    <!-- Menu Principal - Solo visible cuando est치 logueado -->
    <FlyoutItem Title="游 Inicio" Icon="home.png" IsVisible="{Binding MenuVisible}">
        <ShellContent
            Title="Dashboard"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="游닀 Buscar Libros" Icon="search.png" IsVisible="{Binding MenuVisible}">
        <ShellContent
            Title="Buscar Libros"
            ContentTemplate="{DataTemplate pages:BuscarLibrosPage}"
            Route="BuscarLibrosPage" />
    </FlyoutItem>

    <FlyoutItem Title="游늶 Mis Prestamos" Icon="book.png" IsVisible="{Binding MenuVisible}">
        <ShellContent
            Title="Prestamos"
            ContentTemplate="{DataTemplate pages:PrestamosPage}"
            Route="PrestamosPage" />
    </FlyoutItem>

    <!-- Footer del Flyout con opci칩n de logout -->
    <Shell.FlyoutFooter>
        <StackLayout IsVisible="{Binding MenuVisible}" BackgroundColor="#F5F5F5" Padding="10">
            <Button 
                Text="游뛁 Cerrar Sesion" 
                BackgroundColor="#F44336" 
                TextColor="White"
                Command="{Binding LogoutCommand}"
                CornerRadius="5"/>
        </StackLayout>
    </Shell.FlyoutFooter>

</Shell>
